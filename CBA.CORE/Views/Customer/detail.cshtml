@model IEnumerable<Customer>
@{
    ViewBag.title = "Users List";
}

<h1>List Of Users</h1>
<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">View users</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Customer" asp-action="add">Create New Customer</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ID</td>
                        <td width="30%">@item.FullName</td>
                        <td width="30%">@item.Email</td>
                        <td width="30%">@item.Gender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Items have been recorded </p>
    }
</div>