@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
}

<h3>List Of All Users</h3>

@if (Model.Any())
{
    <a asp-action="Add" asp-controller="Administration"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id || @user.LastName @user.FirstName
            </div>
            <div class="card-body">
                <h5 class="card-title">User Name: @user.UserName</h5> <br/>
                <h5 class="card-title">Email: @user.Email</h5>
            </div>
            <div class="card-footer">
                <a asp-action="edituser" asp-controller="administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-primary">Disable</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Administration" asp-action="Add">
                Add new user
            </a>
        </div>
    </div>
}
