@model CBA.CORE.Models.TillAccount

@{
    ViewBag.Title = "Create";
}

<h2>Assign</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Assign A Till To User</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        >
    </div>

<div class="form-group">
    @Html.LabelFor(model => model.UserId, "Select a user", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("UserId", ViewBag.Users as SelectList, "--select--", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.GlAccountID, "Select a till account", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownListFor(model => model.GlAccountID, null, "--select--", htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-primary btn-primary" />
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

